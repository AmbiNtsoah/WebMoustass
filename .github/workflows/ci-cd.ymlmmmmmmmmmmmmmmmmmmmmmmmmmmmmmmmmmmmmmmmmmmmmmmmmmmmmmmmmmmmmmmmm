name: CI/CD for Node.js + Docker (dev branch only)

on:
  push:
    branches: [ "developer_2" ]
  pull_request:
    branches: [ "developer_2" ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm install

      - name: Run linter
        run: npm run lint || echo "Linter failed"

      - name: Run tests
        run: npm test || echo "Tests failed"

      - name: Build Docker images
        run: docker-compose -f docker-compose.yml build

      - name: Start services for testing
        run: docker-compose -f docker-compose.yml up -d

      - name: Wait for MySQL to be healthy
        run: |
          for i in {1..10}; do
            docker inspect --format='{{json .State.Health.Status}}' mysql-container | grep -q '"healthy"' && break
            echo "Waiting for MySQL to be healthy..."
            sleep 5
          done

      - name: Check backend health
        run: curl --fail http://moustassweb.com:3000 || exit 1

      - name: Stop containers
        run: docker-compose -f docker-compose.yml down
